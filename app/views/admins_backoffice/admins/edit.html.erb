<div style="padding: 1%">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Editando</h1>
            <hr class="rounded">
            <% if @admin.errors.any? %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    <ul>
                        <% @admin.errors.full_messages.each do |message| %>
                            <li> <%= message %> </li>
                        <% end %>
                    </ul>
                </div>
            <% end %>
        </div>
    </div>
    <%= form_with model: [ :admins_backoffice, @admin ], local: true, class:"row g-3" do |form| %> 
        <div class="col-md-6">
            <%= form.label :email, class:"form-label"%>
            <%= form.text_field :email, class:"form-control", placeholder:"Email"%>
        </div>
        <div class="col-md-3">
            <%= form.label :password, class:"form-label"%>
            <%= form.password_field :password, class:"form-control", placeholder:"Senha"%>
        </div>
        <div class="col-md-3">
            <%= form.label :password_confirmation, class:"form-label"%>
            <%= form.password_field :password_confirmation, class:"form-control", placeholder:"Senha"%>
        </div>
        <br>
        <button type="submit" class="btn btn-success">Salvar</button>
    <% end %>

</div>