<div style="padding: 1%">
    <h1><%= Admin.human_attribute_name(:admin)%></h1>
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th scope="col"><%= @admins.human_attribute_name(:id)%></th>
                <th scope="col"><%= @admins.human_attribute_name(:email)%></th>
                <th>
                    <a <%= link_to t('links.create_admin'), new_admins_backoffice_admin_path, type:"button", class:"btn btn-success" %> </a>
                </th>
            </tr>
        </thead>
        <tbody>
            <% @admins.each do |admin| %>
            <tr>
                <td><%= admin.id %></td>
                <td><%= admin.email %></td>
                <td>
                    <%= link_to t('links.edit'), edit_admins_backoffice_admin_path(admin), type:"button", class:"btn btn-primary" %>
                    <%= link_to t('links.destroy'), admins_backoffice_admin_path(admin), data: { turbo_method: :delete }, type:"button", class:"btn btn-danger" %>
                </td>
            </tr>
            <% end %>
        </tbody>
        </table>
    </div>
</div>